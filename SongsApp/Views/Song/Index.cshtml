@model IEnumerable<Song>
@{
    ViewData["Title"] = "Index";
}



<div>
    <a class="btn btn-info" asp-action="Create" asp-controller="Song">Create</a>

</div>

@foreach (var item in Model)
{

    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
            <a href="post.html">
                <h2 class="post-title">
                    @Html.DisplayFor(s => item.SongName)
                </h2>
                <h3 class="post-subtitle">
                    By
                    @Html.DisplayFor(s => item.Singers.SingerName)
                </h3>
                <div class="post-subtitle">

                    <img style="width:200px;height:150px;"   src="@item.ImageUrl" alt="@item.Singers.SingerName" />

                </div>

            </a>
            

            <p class="post-meta">

                Album: @item.AlbumName
                Released on @item.ReleaseDate
            </p>

            
        </div>

        <hr>

        <hr>
        <!-- Pager -->
        <div class="clearfix">
             <a asp-action="Edit" asp-route-id="@item.SongId" class="btn btn-dark">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.SongId" class="btn btn-danger">Delete</a>
        </div>
    </div>

}

