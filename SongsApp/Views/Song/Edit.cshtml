
@{
    ViewData["Title"] = "Edit";
}



@model Song



<form name="sentMessage" id="contactForm" novalidate asp-action="Edit">

    @*SongName*@
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Song Name" id="name"value="@Model.SongName" name="SongName" required data-validation-required-message="Please enter Song name.">
            <p class="help-block text-danger"></p>
        </div>
    </div>

    @*Singer*@
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Singer</label>
            <select asp-for="SingerId"
                    asp-items="@ViewBag.singers as SelectList"
                    class="form-control"
                    name="SingerName"
                    asp-validation-for="Please Singer Name.">
                <option>Please Select Singer</option>

            </select>
            <p class="help-block text-danger"></p>
        </div>
    </div>

    @*Album Name*@
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>AlbumName</label>
            <input type="text" class="form-control" placeholder="Album Name" id="name" value="@Model.AlbumName"name="AlbumName" required data-validation-required-message="Please Singer Name.">
            <p class="help-block text-danger"></p>
        </div>
    </div>


    @*Release Year*@
    <div class="control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Release Year</label>
            <input type="tel" class="form-control" name="ReleaseDate" placeholder="Year" value="@Model.ReleaseDate" required data-validation-required-message="Please enter Year">
            <p class="help-block text-danger"></p>
        </div>
    </div>
   

    @*URL*@
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Url</label>
            <input type="text" class="form-control" placeholder="Image Url" id="name"value="@Model.ImageUrl" name="ImageUrl" required data-validation-required-message="Please Image Url.">
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <br>
    <div id="success"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="sendMessageButton">Edit</button>
    </div>
</form>

